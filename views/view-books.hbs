<div class="row p-4">
    <table class="table table-borderless  table-hover table-responsive">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Book Name</th>
        <th scope="col">Author Name</th>
        <th scope="col">Price</th>
        <th scope="col">Date of Publiction</th>
        <th scope="col">Language</th>
        </tr>
    </thead>
    <tbody>
        {{#each book}}
        <tr onclick="window.location.href='/view-book/{{_id}}'">
            <th scope="row">{{inc @index}} </th>
            <td>{{this.bk_name}}</td>
            <td>{{this.au_name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.dop}}</td>
            <td>{{this.lg}} </td>
        </tr>
        {{/each}}
    </tbody>
    </table>    
</div>

<style>
    .table-responsive {
    display: inline-table;
    width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
}
@media(max-width:700px){
    .table-responsive {
    display: block;
    width: 134%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
}
}
</style>